<h1 class="headings">
  <%= link_to 'Club Management', manage_user_path(current_user) %> > <%= @club.name %>
</h1>


<div class="management_bar">
     <article>
        
        <h4>
            Pending Requests <span class="badge"><%= @club.member_requests.count %></span></h4>
            <h4><%= link_to "Manage Requests", manage_requests_path %></h4>
        
    </article>
    <article>
        <h4>Manage Club Members <span class="badge"><%= @club.members.count %></span></h4>
        <h4><%= link_to "Show All Members", manage_club_members_path %></h4>
    </article>
    <article>
        <h4> &emsp; </h4>
        <h4><%= link_to "Manage Club Layouts", edit_club_path(@club) %></h4>
        <h4> &emsp; </h4>
    </article>
    <article>
        <h4>Manage Posts <span class="badge"><%= @club.posts.count %></span></h4>
        <% if logged_in? and current_user.memClubs.include?(@club) %>
            <h4><%= link_to "Create new post", new_club_post_path %></h4>
            <h4><%= link_to "See All posts", view_club_path %></h4>
        <% end %>
    </article>
    
    <article>
        <h4> &emsp; </h4>
        <h4><%= link_to "Manage Moderators", add_moderator_club_path %></h4>
        <h4> &emsp; </h4>
    </article>
 
</div>


