<%= form_for(@club) do |f| %>
      <%= render 'shared/error_messages',object: f.object %>
    
      
      <%= f.label :club_avatar, "Avatar"  %>
    
      <%= f.file_field :club_avatar %>
      
      
      <%= f.label :name, "Club's Name" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: 'form-control', rows: "5" %>
    
      <%= f.label :genre %>
      <%= f.select(:genre, options_for_select([['Arts','Arts'],
                              ['Career Development', 'Career Development'], ['Charitable', 'Charitable'], 
                              ['Cultural', 'Cultural'], ['Other', 'Other'], ['Political', 'Political'],
                              ['Social', 'Social'], ['Social Justice/Activism', 'Social Justice/Activism'],
                              ['Special Interst/Hobby', 'Special Interst/Hobby'], ['Sport', 'Sport'],
                              ['Spiritual', 'Spiritual']])) %>
      
      
     
      
      <%= f.submit "Create New Club", class: "btn btn-primary" %>
    <% end %>