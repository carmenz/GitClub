
<h1 class="headings">
  <%= link_to @post.club.name, build_club_path(@post.club) %> > New Post
</h1>

<!-- render content of the post -->
<%= render 'show' %>

<% if logged_in? %>
    <%= render 'comments/form' %>
<% end %>

<!-- renders all the comments in the current post -->
<div class = "row">
    <div class="col-md-8 col-md-offset-2 ">
        <h3>Comments (<%= @post.comments.count %>)</h3>
        <ol class ="comments">
            <%#= render @post.comments %>
            <%= nested_messages @post.comments.arrange(order: 'created_at desc') %>
        </ol>
    </div>
</div>


