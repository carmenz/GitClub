<% provide(:title, @user.name) %>

 
<h1 class="headings">
  <%= @user.name %>
</h1>

<aside class="jumbo2">
  <div class="row">      
      <p class="p1">
        <br>
         <% @user = User.find(params[:id]) %>
         <%= image_tag(@user.avatar.url(:thumb)) %>
        <br>
        <br>
        <br>
        <br>
        <br>
        <% @user = User.find(params[:id]) %>
        <% if @user==current_user %>
          <span><%= link_to "Edit Profile", edit_user_path %></span>
          <span><%= link_to "Create new club", commit_path %></span>
          <span><%= link_to "Manage your clubs", manage_user_path %></span>
        </p>
        <% end %>
      <p class="p2">
        <span>Email: <%= @user.email %></span>
        <span>First Name: <%= @user.firstname %></span>
        <span>Last Name: <%= @user.lastname %></span>
        <span>Gender: <%= @user.gender %></span>
        <span>Birthday: </span>
        <span>Phone Number: <%= @user.phone %></span>
        <span>Degree: <%= @user.degree %></span>
        <span>Major: <%= @user.major %></span>
        <span>Clubs:</span>
      </p>

 
  </div>
</aside>