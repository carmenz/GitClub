<div class="headerimg"><%= image_tag('GitClubLogo.png', id: "logo") %></div>

<header class="navbar">
  <div class="container">

    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "Home",   welcome_home_path %></li>
        <li><%= link_to "Clubs", clubs_path %></li>
        <li><%= link_to "Help",   welcome_help_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="avatar"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
          
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>

              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>